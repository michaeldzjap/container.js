{
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"],
            "@typings/*": ["./typings/*"]
        },
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["dom", "es5", "es6", "es7"],
        "module": "esNext",
        "noImplicitAny": true,
        "outDir": "dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es2017"
    },
    "include": [
        "src/**/*",
        "typings/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
