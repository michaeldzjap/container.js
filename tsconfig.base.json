{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "target": "es5",
        "module": "esnext",
        "types": [
            "node",
            "reflect-metadata"
        ],
        "lib": ["es5", "es6", "es7", "dom"],
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "downlevelIteration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
